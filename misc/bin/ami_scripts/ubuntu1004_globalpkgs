#!/bin/bash

sudo apt-get -y update || exit 1

# cleanup dev dependencies in case we've run the other scenario before...
echo Cleanup...
sudo apt-get -y remove python-gdal libgdal1-1.6.0 \
    libgdal1-dev \
    libxml2 libxml2-dev \
    libxslt1.1 libxslt1-dev

# echo More cleanup...
# sudo apt-get autoremove

sudo ldconfig

sudo apt-get -y install \
    build-essential \
    git-core \
    libproj-dev \
    libproj0 \
    postgresql-8.4-postgis \
    postgresql-server-dev-8.4 \
    python-distribute  \
    python-gdal \
    python2.6 \
    python2.6-dev \
    python-lxml \
    python-virtualenv \
    python-imaging \
    python-shapely \
    subversion \
    unzip \
    wget || exit 1

sudo ldconfig || exit 1
echo Rebooting
sudo reboot
